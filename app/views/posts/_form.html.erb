<%= form_for @post, html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_area :title, autofocus: true %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <br>
  <%= f.label :image %><br>
  <span class="image-button"> <%= f.file_field :image %> <br>
  <br>
  <%= f.submit %>
<% end %>


